{# app/Resources/views/App/_product.html.twig #}

{% for product in listProducts %}
    <div class="col-xs-10 col-xs-offset-1 col-sm-4 col-sm-offset-0">
        <h4 class="product-absolute-center text-center product-title">{{ product.name }}</h4>
        <p class="product-absolute-center text-center product-content">{{ product.description }}</p>
        <img src="{{ asset(product.photo.url) }}" class="img-responsive"  alt="{{ product.photo.alt }}">
    </div>
{% else %}
    <p>Aucun produit trouv√©.</p>
{% endfor %}
