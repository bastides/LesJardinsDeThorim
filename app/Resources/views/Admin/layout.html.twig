{# app/resources/views/Admin/layout.html.twig #}

{% extends "::layout.html.twig" %}

{% block stylesheets %} <link rel="stylesheet" href="{{ asset('css/admin.css') }}" /> {% endblock %}

{% block title %} {{ parent() }} - Administration {% endblock %}

{% block body %}
    <nav class="navbar navbar-inverse">
        <div class="container-fluid">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#">Administration</a>
            </div>

            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav">
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Produits <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            {% for product in listProducts %}
                                <li><a href="#">{{ product.name }}</a></li>
                            {% else %}
                                <li>Aucun produit trouvé</li>
                            {% endfor %}
                            <li role="separator" class="divider"></li>
                            <li><a href="#">Créer un produit</a></li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Profils <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            {% for profile in listProfiles %}
                                <li><a href="#">{{ profile.name }}</a></li>
                            {% else %}
                                <li>Aucun profil trouvé</li>
                            {% endfor %}
                            <li role="separator" class="divider"></li>
                            <li><a href="#">Créer un profil</a></li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Galerie <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            {% for gallery in listGalleries %}
                                <li><a href="#">{{ gallery.title }}</a></li>
                            {% else %}
                                <li>Aucune photo trouvé</li>
                            {% endfor %}
                            <li role="separator" class="divider"></li>
                            <li><a href="#">Ajouter une photo</a></li>
                        </ul>
                    </li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="{{ path('ljdt_app_home') }}">Retour au site</a></li>
                </ul>
            </div><!-- /.navbar-collapse -->
        </div><!-- /.container-fluid -->
    </nav>
{% endblock %}